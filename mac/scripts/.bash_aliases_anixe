# aclr8 project
alias aclr8='cd $ANX_GIT/aclr8/aclr8'
## cargo aclr8
alias ctatoms='cargo test -p aclr8_atoms'
alias ctmolecules='cargo test -p aclr8_molecules'
alias ctrepl='cargo test -p aclr8i'
alias ctutils='cargo test -p aclr8_utils'
alias cta='cargo test --all'
alias ctaf='cargo test --all-features'
# aclr8 group projects
alias deploy='cd $ANX_GIT/aclr8/deploy'
alias hs='cd $ANX_GIT/aclr8/hotels_service'
alias mercures='cd $ANX_GIT/aclr8/mercures'
alias com='cd $ANX_GIT/aclr8/com'
alias cm_tools='cd $ANX_GIT/aclr8/cm_tools'
alias rt='cd $ANX_GIT/aclr8/ratetiger_webservice'
alias dg='cd $ANX_GIT/aclr8/dingus_webservice'
alias sm='cd $ANX_GIT/aclr8/siteminder_webservice'
alias pr='cd $ANX_GIT/aclr8/primalres_webservice'

# gwg group
alias gwg='cd $ANX_GIT/gwg'
alias cerberus='cd $ANX_GIT/gwg/cerberus'
alias export_center='cd $ANX_GIT/gwg/export_center_service'
alias ariz_atcore='cd $ANX_GIT/gwg/resfinity_atcore_transformers_ariz'

# aclr8 tests
alias aclr8_gwg_tests='cd $ANX_GIT/annalise.scicluna/aclr8_tests'

alias anx_display='alias | grep "/anx/"'

alias run_specs='find spec -maxdepth 2 -type d -exec bash -c "echo {}; bundle exec rspec {}" \;'