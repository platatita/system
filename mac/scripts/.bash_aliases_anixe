#! /bin/bash

# anixe
ANX_GIT=$HOME/anx/sources/git

alias anx='cd ~/anx'
alias anxgit='cd $ANX_GIT'
alias anxtmp='cd ~/anx/tmp'
alias anxetc='cd ~/anx/etc'

alias anx_platform='cd ~/anx/etc/platform'
alias anx_assembly='cd ~/anx/bin/assembly'

alias sdpa='cd $ANX_GIT/sdpa'

alias synapse='cd $ANX_GIT/synapse'
alias synw='cd $ANX_GIT/synapse_worker'
alias syna='cd $ANX_GIT/synapse_aer'

alias anixe='cd $ANX_GIT/anixe'
alias resfinity='cd $ANX_GIT/resfinity'
alias suppliers='cd $ANX_GIT/suppliers'

alias bmsw='cd $ANX_GIT/bmsweb'
alias bms='cd $ANX_GIT/bms'

alias tomaweb='cd $ANX_GIT/tomaweb'

alias ari='cd $ANX_GIT/resfinity/resfinity_ari'
alias ariz_reader='cd $ANX_GIT/resfinity/resfinity_ariz_readers'
alias ariz='cd $ANX_GIT/resfinity/resfinity_ariz_transformers'

alias mono_assembly='cd /opt/mono_assembly/current'

alias res_pa_data='cd /var/data/resfinity_pa'
alias ari_data='cd /var/data/resfinity_ari'
alias ariz_data='cd /var/data/resfinity/transformers'
alias df_data='cd /var/data/resfinity/datafactory'
