#! /bin/bash

# Setting Variable Environment
# add mongo to system PATH
export PATH=$PATH:/opt/mongodb/bin

# postgresql
export PATH="/Applications/Postgres.app/Contents/MacOS/bin:$PATH"

# scala
export PATH=$PATH:/opt/scala/bin
export PATH=$PATH:/opt/scalatest/lib

# play framework
export PATH=$PATH:/Users/admin/playframework/play

# add /opt/local/bin to the PATH
export PATH=$PATH:/opt/local/bin:/opt/local/sbin

# dispaly in the terminal the username@hostname:current directory path.
read_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\u@\H:\w\[\033[32m\]\$(read_git_branch)\[\033[00m\]$ "

# set terminal colors
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad


# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
